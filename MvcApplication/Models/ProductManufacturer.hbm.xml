<?xml version="1.0" encoding="utf-8" ?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
                assembly="MvcApplication"
                namespace="MvcApplication.Models">
  <class name="ProductManufacturer">
    <!--<composite-id>
      <key-property name="ProductID"/>
      <key-property name="ManufacturerID"/>
    </composite-id>-->
    <id name="ProductID">
      <generator class="native"/>
    </id>
    <property name="DisplayOrder"/>
    <property name="ManufacturerID"/>
    <property name="CreatedOn"/>
    <many-to-one class="Product" name="ProductFor" column="ProductID" insert="true" not-found="exception" fetch="join" />
    <many-to-one class="Manufacturer" name="ManufacturerFor" column="ManufacturerID" insert="true" not-found="exception" fetch="join" />
  </class>
</hibernate-mapping>